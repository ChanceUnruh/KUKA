  DECL INT my_var  ; Integer variable (no initialization)
  DECL REAL my_float  ; Floating-point variable (no initialization)
  DECL BOOL my_flag  ; Boolean variable (no initialization)
  ; ENDFOLD

  ; FOLD VARIABLE INITIALIZATION
  my_position = {X 0, Y 0, Z 0, A 0, B 0, C 0}  ; Initialize my_position with coordinates
