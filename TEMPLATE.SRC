  my_float = 0.0  ; Initialize my_float to 0.0
  my_flag = FALSE  ; Initialize my_flag to FALSE
  ; ENDFOLD

  ; FOLD TOOL AND FRAME DECLARATION
  $TOOL = TOOL_DATA[2]  ; Set the active tool frame to TOOL_DATA[2]
  $BASE = BASE_DATA[1]  ; Set the active base frame to BASE_DATA[1]
  ; ENDFOLD

  ; FOLD INITIALIZATION
  BAS (#INITMOV, 0)  ; Calls standard KUKA motion initialization
  ; ENDFOLD

  ; PROGRAM LOGIC STARTS HERE

  ; Your code here

END  ; Ends the DEF TEMPLATE function

